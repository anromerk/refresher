{
  "manifest_version": 2,
  "name": "VTO Auto-Mater",
  "version": "1.0.0",
  "description": "Automatically refreshes and accepts VTO drops.",
  "icons": {
    "48": "icon.png",
    "96": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://atoz.amazon.work/voluntary_time_off"], 
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "tabs",
    "storage"
  ]
}
